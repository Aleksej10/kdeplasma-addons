<?xml version="1.0" encoding="UTF-8"?>
<pui
    xmlns:item = "http://nonexistant"
    xmlns:code = "http://nonexistant"
    xmlns:Plasma__BorderLayout = "http://nonexistant" 
    xmlns:Plasma__NodeLayout = "http://nonexistant" 
>
    <defines>
        <!-- These values will be converted to #define statements -->
        <define name="SYSTEM_HEIGHT" value="48" />
        <define name="SEARCH_HEIGHT" value="30" />
        <define name="SECTIONS_WIDTH" value="128" />
    </defines>
    <ui
        rootObjectType="Plasma::Widget"
        className="LancelotWindowBase"
    >
        <item:layout
            type="Plasma::FlipLayout"
            name="layoutMain"
            realLayout="Plasma::BorderLayout"
            margin="0"
            spacing="0"
            leftSize="SECTIONS_WIDTH"
        >
            <item:layout
                type="Plasma::FlipLayout"
                name="layoutMainLeft"
                realLayout="Plasma::BorderLayout"
                margin="0" spacing="0"

                topSize="SEARCH_HEIGHT"
                bottomSize="SYSTEM_HEIGHT"
                
                Plasma__BorderLayout:position="Left"
            >
                <item:widget
                    type="Lancelot::Panel" name="panelSections"
                    
                    Plasma__BorderLayout:position="Center"
                >
                    <item:layout
                        type="Plasma::FlipLayout" name="layoutSections"
                        
                        realLayout="Plasma::NodeLayout"
                        margin="0"
                        spacing="0"
                    >
                        <item:widget
                            type="Lancelot::ToggleExtenderButton" name="buttonSectionsApplications"
                            
                            title="Applications"
                            icon="applications-other"
                            group="SectionButtons"
                            activation="Hover"
                            iconSize="48, 48"
                            orientation="Vertical"
                            
                            Plasma__NodeLayout:topLeft     = "0, 0    , 0, 1"
                            Plasma__NodeLayout:bottomRight = "1, .25  , 0, -1"
                        />
                        <item:widget
                            type="Lancelot::ToggleExtenderButton" name="buttonSectionsComputer"
                            
                            title="Computer"
                            icon="computer-laptop"
                            group="SectionButtons"
                            activation="Hover"
                            iconSize="48, 48"
                            orientation="Vertical"

                            Plasma__NodeLayout:topLeft     = "0, .25  , 0, 1"
                            Plasma__NodeLayout:bottomRight = "1, .50  , 0, -1"
                        />
                        <item:widget
                            type="Lancelot::ToggleExtenderButton" name="buttonSectionsContacts"

                            title="Contacts"
                            icon="kontact"
                            group="SectionButtons"
                            activation="Hover"
                            iconSize="48, 48"
                            orientation="Vertical"

                            Plasma__NodeLayout:topLeft     = "0, .50  , 0, 1"
                            Plasma__NodeLayout:bottomRight = "1, .75  , 0, -1"
                        />
                        <item:widget
                            type="Lancelot::ToggleExtenderButton" name="buttonSectionsDocuments"

                            title="Documents"
                            icon="applications-office"
                            group="SectionButtons"
                            activation="Hover"
                            iconSize="48, 48"
                            orientation="Vertical"

                            Plasma__NodeLayout:topLeft     = "0, .75  , 0, 1"
                            Plasma__NodeLayout:bottomRight = "1, 1  , 0, -1"
                        />
                    </item:layout>
                </item:widget>
            </item:layout>
            <item:layout
                type="Plasma::FlipLayout" name="layoutMainCenter"
                realLayout="Plasma::BorderLayout"
                
                margin="0"
                spacing="0"
                
                topSize="SEARCH_HEIGHT"
                bottomSize="SYSTEM_HEIGHT"

                Plasma__BorderLayout:position="Center"
            >
                <item:layout
                    type="Plasma::NodeLayout" name="layoutSearch"
                    margin="0" spacing="0"
                    
                    Plasma__BorderLayout:position="Top"
                >
                <!--
                    Dirty hack to get an edit box before Qt 4.4 :: begin
                    <code:declaration>
                        KLineEdit * editSearch;
                    </code:declaration>
                    <code:initialization>
                        editSearch = new KLineEdit(object);
                    </code:initialization>
                    <code:setup>
                        editSearch->setClearButtonShown(true);
                        editSearch->setFrame(false);
                    </code:setup>
                    Dirty hack to get an edit box before Qt 4.4 :: end
                    <item:widget
                        name="editSearchPositioner"
                        ></item:widget>
                
                        editSearch = new KLineEdit(object);
                    editSearchPositioner = new Lancelot::WidgetPositioner(editSearch, m_view, panelSearch);
            
                    labelSearch = new Plasma::Label(panelSearch);
                            
                                    layoutSearch->addItem(editSearchPositioner,
                        Plasma::NodeLayout::NodeCoordinate(0.5, 0.5, 0, 0),
                        Plasma::NodeLayout::NodeCoordinate(1.0, 0.5, -10, INFINITY)
                    );
                    layoutSearch->addItem(labelSearch,
                        Plasma::NodeLayout::NodeCoordinate(0.5, 0.5, 0, 0),
                        1.1, 0.5
                    );
                -->
                </item:layout>
                <item:layout
                    type="Plasma::NodeLayout" name="layoutCenter"
                    margin="0" spacing="0"
                    
                    Plasma__BorderLayout:position="Center"
                >
                </item:layout>
                <item:layout
                    type="Plasma::NodeLayout" name="layoutSystem"
                    margin="0" spacing="0"
                    
                    Plasma__BorderLayout:position="Bottom"
                >
                    <item:widget
                        type="Lancelot::ExtenderButton" name="buttonSystemLockScreen"

                        title="Lock Session"
                        icon="system-lock-screen"
                        group="SystemButtons"
                        activation="Extender"
                        extenderPosition="Bottom"
                        iconSize="24, 24"

                        Plasma__NodeLayout:topLeft     = "0, 0, 4, 0"
                        Plasma__NodeLayout:bottomRight = "1.0 / 3.0, 1, -4, -20"
                    />
                    <item:widget
                        type="Lancelot::ExtenderButton" name="buttonSystemLogout"

                        title="Log Out..."
                        icon="system-log-out"
                        group="SystemButtons"
                        activation="Extender"
                        extenderPosition="Bottom"
                        iconSize="24, 24"

                        Plasma__NodeLayout:topLeft     = "1.0 / 3.0, 0, 4, 0"
                        Plasma__NodeLayout:bottomRight = "2.0 / 3.0, 1, -4, -20"
                    />
                    <item:widget
                        type="Lancelot::ExtenderButton" name="buttonSystemSwitchUser"

                        title="Switch User"
                        icon="switchuser"
                        group="SystemButtons"
                        activation="Extender"
                        extenderPosition="Bottom"
                        iconSize="24, 24"

                        Plasma__NodeLayout:topLeft     = "2.0 / 3.0, 0, 4, 0"
                        Plasma__NodeLayout:bottomRight = "1, 1, -4, -20"
                    />
                </item:layout>
            </item:layout>
        </item:layout>
    </ui>
</pui>